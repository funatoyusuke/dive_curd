<div class="container">
    <div class="col-md-4 col-md-offset-4 mx-auto">

  <div class="text-center"><h2>ログイン</h2></div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %><br>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を記録しますか？ %><br>
    </div>
  <% end -%>

  <div class="actions text-center">
    <%= f.submit "ログイン" ,class:'btn btn-primary'%>
  </div><br>
<% end %>

<div class="text-center">
  <%= link_to 'Topに戻る', root_path, class:'btn btn-primary' %>
</div>

<!-- <#%= render "devise/shared/links" %> -->
</div>
</div>
