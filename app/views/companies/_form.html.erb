<div class="container">
  <div class="content-center">
    <%= form_for(@company) do |f| %>
      <% if @company.errors.any? %>
      <div id="error_exp;anation">
        <h2><%= pluralize(@company.errors.count, 'エラー') %>saved</h2>

        <ul>
          <% @company.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <div class="form-low">
       <div class="col-md-5 col-xs-12">
         <%= f.text_field :name, autofocus: true, placeholder: "会社名", class: "form-control" %><br>
         <%= f.text_field :address, autofocus: true, placeholder: "住所", class: "form-control" %><br>
         <%= f.text_field :tel, autofocus: true, placeholder: "電話番号", class: "form-control" %><br>
         <%= f.text_field :fax, autofocus: true, placeholder: "ファックス", class: "form-control" %><br>
         <%= f.text_field :url, autofocus: true, placeholder: "Webサイト", class: "form-control" %><br>
       </div>
       <div class="col-md-7 col-xs-12">
         <%= f.text_area :comment, autofocus: true, placeholder: "メモ", class: "form-control", rows: 12 %><br>
       </div>
    </div>
    </div>
    <div class="actions text-center "><br>
      <%= f.submit "更新する", class:'btn btn-primary'%>
    </div>
  <% end %>
  </div>
</div>
