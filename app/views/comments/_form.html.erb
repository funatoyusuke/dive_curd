<%= form_with(model: [company, comment]) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %></h2>
      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :コメント %>
    <%= form.text_area :body, class: "form-control" , rows: 5 %>
  </div>

  <div class="actions">
    <%= form.submit 'コメントを投稿する' ,class: "btn btn-primary btn-lg btn-block" %>
  </div><br>
<% end %>
