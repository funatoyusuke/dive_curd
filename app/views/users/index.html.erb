<div class="text-primary"><h4><%= @company.name %>:<%= @group.name %></h4>
<h3>社員一覧</h3></div>
<br>


<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>メモ</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
         <td><%= user.name %></td>
         <td><%= user.mail %></td>
         <td><%= user.tel %></td>
	 <td><%= "#{user.comment}".truncate(30) %></td>
         <td>
           <%= link_to '詳細', company_group_user_path(@company, @group, user), class:'btn btn-default'  %>
           <%= link_to '編集', edit_company_group_user_path(@company, @group, user), class:'btn btn-default' %>
           <%= link_to '削除', company_group_user_path(@company, @group, user), method: :delete, data: { confirm: '削除しますか？' }, class:'btn btn-default' %>
	   <%= link_to '名刺情報', company_group_user_name_cards_path(@company, @group, user),class:'btn btn-default' %>
         </td>
       </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<br>
<div class="text-center">
<%= link_to '社員を追加する', new_company_group_user_path(@company, @group), class:'btn btn-primary' %>
<%= link_to '部署一覧へ戻る',company_groups_path(@company), class:'btn btn-primary' %>
</div>
